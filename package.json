{
  "name": "be-bolao-vue-ts",
  "version": "1.0.0",
  "description": "Bolao BE in NodeJS with TypeScript and Express",
  "type": "module",
  "files": [
    "dist/**"
  ],
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx --watch --env-file .env src/index.ts",
    "start": "node --env-file .env dist/src/index.js",
    "start:prod": "pm2 start \"node --env-file=.env index.js\" --watch",
    "build": "tsc -p tsconfig.build.json && tsc-alias",
    "postbuild": "cp package.json dist/",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FelipeZNascimento/be-bolao-vue-ts.git"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint",
      "prettier --check"
    ],
    "*.{json,yml,yaml,md}": [
      "prettier --check"
    ]
  },
  "keywords": [],
  "author": "Felipe Zanon do Nascimento",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FelipeZNascimento/be-bolao-vue-ts/issues"
  },
  "homepage": "https://github.com/FelipeZNascimento/be-bolao-vue-ts#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-mysql-session": "^3.0.3",
    "express-session": "^1.18.2",
    "mysql2": "^3.14.3",
    "node-cache": "^5.1.2",
    "nodemailer": "^7.0.6",
    "websocket-express": "^4.0.1",
    "ws": "^8.18.3",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@tsconfig/node22": "^22.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-mysql-session": "^3.0.3",
    "@types/express-session": "^1.18.2",
    "@types/node": "^24.3.0",
    "@types/nodemailer": "^7.0.1",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/eslint-plugin": "^1.3.4",
    "eslint": "^9.34.0",
    "eslint-plugin-perfectionist": "^4.15.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0",
    "vitest": "^3.2.4"
  },
  "imports": {
    "#*": "./src/*"
  }
}
